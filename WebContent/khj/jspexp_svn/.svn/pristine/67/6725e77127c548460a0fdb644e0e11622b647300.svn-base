<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"
    import="java.util.*,jspexp.z01_vo.*,jspexp.b01_database.*"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>    
<c:set var="path" value="${pageContext.request.contextPath}"/>
<fmt:requestEncoding value="utf-8" />
<!DOCTYPE html>
<%--

 --%>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" 
	href="${path }/a00_com/a00_com.css">
<style>
td{width:25%;}
</style>
</head>
<script type="text/javascript" src="${path }/a00_com/jquery-3.4.1.js"></script>
<script type="text/javascript">
	$(document).ready(function(){
		<%--
		
		--%>
		$("h2").text("jquery 시작!");
		var color = ["red","orange","yellow","green","blue","navy","purple"];
		for(let i=0; i<7; i++) {
			$("h3").eq(i).html(color[i]);
			$("h3").eq(i).css("background-color",color[i]);
		}
		$("table").attr("align","center");
		var ran = Math.floor(Math.random()*16);
		for(let i=0; i<16; i++) {
			if(i===ran) $("td").eq(i).text("폭탄!!");
			else $("td").eq(i).text(16-i);
		}
		$("input[name=id]").css({"text-align":"center","color":"orange","background-color":"blue"}).val("id");
		$("input[name=pass]").css({"text-align":"center","color":"orange","background-color":"blue"}).val("pass");
	});
	function login() {
		if($("input[name=id]").val()=="himan" && $("input[name=pass]").val()=="7777") $("[name=id],[name=pass]").css("background-color","white");
		else $("[name=id],[name=pass]").css("background-color","red");
	}
</script>
<body>
	<h2></h2>
	<h3></h3>
	<h3></h3>
	<h3></h3>
	<h3></h3>
	<h3></h3>
	<h3></h3>
	<h3></h3>
	<table border>
		<tr><td></td><td></td><td></td><td></td></tr>
		<tr><td></td><td></td><td></td><td></td></tr>
		<tr><td></td><td></td><td></td><td></td></tr>
		<tr><td></td><td></td><td></td><td></td></tr>
	</table>
	<h1>로그인</h1>
	아이디 : <input type="text" name="id"/><br>
	패스워드 : <input type="text" name="pass"/><br>
	<input type="button" onclick="login()" value="로그인"/>
	
</body>
</html>