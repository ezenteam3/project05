	장바구니.jsp
	<%
	String path=request.getContextPath();
	request.setCharacterEncoding("utf-8");
	%>
	
	<%
		ArrayList<String> array=(ArrayList<String>)session.getAttribute("item_list1");
		for(String item:array){%>
			<h1><%=item %></h1>
		<%}
	%>
	<%
	  	ArrayList<String> array2=(ArrayList<String>)session.getAttribute("item_list2");
